<h2 style="margin-top: 50px;">Choose one of these recipes:</h1>
<div class="suggested-recipes">
  <% @recipes.each do |recipe| %>
    <div class=''>
      <%= link_to recipe_path(recipe) do  %>
        <div class="recipe-wrapper">
          <%= cl_image_tag recipe.photo.key %>
          <div class="recipe-text">
            <h2><%= recipe.title %></h2>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
