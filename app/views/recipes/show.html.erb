<div class="recipe-header">
  <% if @recipe.photo.attached? %>
    <%= cl_image_tag @recipe.photo.key, class: "recipe-image"%>
  <% else %>
    <%= image_tag "food_placeholder.jpg", class: "recipe-image" %>
  <% end %>
  <br>
  <div class="favorite-icons">
    <% if @recipe.favourite? %>
    <%= link_to favourite_recipe_path(@recipe), style: "text-decoration: none;" do %>
      <i id="favorite-icon" class="fi fi-sr-star"></i>
    <% end %>
  <% else %>
    <%= link_to favourite_recipe_path(@recipe), style: "text-decoration: none;" do %>
      <i id="unfavorite-icon" class="fi-rr-star"></i>
    <% end %>
  <% end %>
  </div>
  <h2><%= @recipe.title %></h2>
  <h3>Did you like this recipe? Click on the star above!</h4>
</div>
<div class="recipe-body">
  <% @recipe.content.split(/\s?\d\.\s/).reject{|c|c.empty?}.each_with_index do |line, index| %>
    <%= "#{index + 1}. #{line.strip}\n" %>
    <br>
    <br>
  <% end %>
</div>
