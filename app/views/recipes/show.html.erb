
<div class="recipe-header">

  <%= image_tag "food_placeholder.jpeg", class: "recipe-image"%>
  <br>
  <%= @recipe.title %>
  <br>
  <br>
</div>
<div class="recipe-ingredients">
  <h3>Ingredients:</h3>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%= "#{ingredient.name}" %> - <%= "#{ingredient.amount} #{ingredient.measurement}" %></li>
    <% end %>
  </ul>
</div>

<div class="recipe-body">
  <% @recipe.content.each_line.with_index(1) do |line, index| %>
    <% line_without_number = line.sub(/^\d+\.\s*/, '') %>
    <%= "#{index}: #{line_without_number.strip}" %>
    <br>
    <br>
  <% end %>
</div>
